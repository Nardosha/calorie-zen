{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "lib": ["es2019", "dom"],
    "jsx": "react-jsx",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "incremental": true,
    "isolatedModules": true,
    "strict": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
